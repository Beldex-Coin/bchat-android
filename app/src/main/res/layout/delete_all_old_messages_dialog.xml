<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/dialog_background_circle">
    <TextView
        android:fontFamily="@font/poppins_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ApplicationPreferencesActivity_delete_all_old_messages_now"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <TextView
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/delete_all_old_messages_dialog_message_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:id="@+id/delete_all_old_messages_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/scan_qr_code_text_color"/>
        <TextView
            android:fontFamily="@font/poppins_semi_bold"
            android:id="@+id/delete_all_old_messages_dialog_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:paddingStart="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/red"/>
    </LinearLayout>
</LinearLayout>