<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_notification_content_background"/>
            <stroke android:width="1dp" android:color="@color/button_green" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/notification_content_background"/>
            <stroke android:width="1dp" android:color="@color/notification_content_border" />
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>