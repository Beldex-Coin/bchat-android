<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/default_dialog_background_inset"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:elevation="4dp"
    tools:context="com.thoughtcrimes.securesms.wallet.send.SendFailedDialog">

    <TextView
        android:fontFamily="@font/open_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title_send_failed"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="@dimen/medium_font_size" />
    <TextView
        android:id="@+id/errorStringValue"
        android:fontFamily="@font/open_sans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invalid address"
        android:textColor="@color/grey"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:textSize="@dimen/small_font_size" />

    <Button
        style="@style/Widget.Bchat.Button.Common.ProminentFilled"
        android:id="@+id/okButton"
        android:layout_width="100dp"
        android:layout_height="@dimen/medium_button_height"
        android:layout_marginBottom="32dp"

        android:text="@string/ok" />

</LinearLayout>