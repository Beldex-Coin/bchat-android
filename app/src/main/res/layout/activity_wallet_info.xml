<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/page_background"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/page_background"
        tools:context="com.thoughtcrimes.securesms.seed.SeedPermissionActivity">

        <ImageView
            android:id="@+id/wallet_info_important_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_important"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/wallet_info_important_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/important"
            android:textSize="@dimen/very_large_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/wallet_info_important_image"
            android:textStyle="bold"/>
        <TextView
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/wallet_info_important_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_info_important_subTitle"
            android:textSize="@dimen/medium_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/wallet_info_important_title"
            android:textStyle="bold"/>

        <TextView
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/wallet_info_important_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallet_info_important_description"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_info_important_subTitle"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/wallet_info_important_descriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallet_info_important_descriptions"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_info_important_description"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/wallet_info_important_confirmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallet_info_important_confirmTitle"
            android:textSize="@dimen/small_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_info_important_descriptions"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <Button
            style="@style/Widget.Bchat.Button.Common.ProminentFilled"
            android:id="@+id/wallet_info_important_confirmButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_button_height"
            android:layout_marginLeft="@dimen/massive_spacing"
            android:layout_marginRight="@dimen/massive_spacing"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/wallet_info_important_confirmTitle"
            android:text="@string/wallet_info_important_confirmButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>