<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/rounded_indicator_border"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@color/pin_rounded_background"
                android:width="2dp"/>
            <solid android:color="@color/pin_rounded_background"/>
            <size
                android:width="19dp"
                android:height="19dp"/>
        </shape>
    </item>
</layer-list>