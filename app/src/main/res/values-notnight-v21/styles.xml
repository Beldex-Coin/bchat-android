<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Bchat.Button.Common.ProminentOutline">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:background">@drawable/prominent_outline_button_medium_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint" tools:ignore="NewApi">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Bchat.Button.Common.ProminentOutlineNew">
        <item name="android:background">@drawable/prominent_outline_button_medium_background_new</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint" tools:ignore="NewApi">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Bchat.Button.Common.ProminentFilled">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:background">@drawable/prominent_filled_button_medium_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@android:color/white</item>
    </style>

    <!--New Line -->
    <style name="Widget.Bchat.Button.Common.ProminentFilledState" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:background">@drawable/button_state</item>
        <item name="android:textColor">@drawable/button_text_state</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FakeChatViewMessageBubble.Incoming">
        <item name="android:background">@drawable/fake_chat_view_incoming_message_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="FakeChatViewMessageBubble.Outgoing">
        <item name="android:background">@drawable/fake_chat_view_outgoing_message_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.Bchat.Button.Dialog.Destructive">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/destructive</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="FullScreenDialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/action_bar_background</item>
        <item name="colorPrimaryDark">@color/action_bar_background</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>