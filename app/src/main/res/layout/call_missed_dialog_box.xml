<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bchat_dialog_background_shape">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_call_missed"
            android:contentDescription="missed call icon" />
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/open_sans_bold"
            android:text="Call Missed!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Call Missed because you needed to enable the ‘Voice and video calls’ permission in the privacy settings."
            android:fontFamily="@font/open_sans_regular"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:gravity="center_horizontal" />
        <Button
            style="@style/Widget.Bchat.Button.Dialog.Ok"
            android:id="@+id/missedCallOkButton"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="@android:string/ok"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>