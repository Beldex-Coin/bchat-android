<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context="com.thoughtcrimes.securesms.MediaOverviewActivity"
        android:theme="@style/Theme.Bchat.DayNight.NoActionBar">

    <com.google.android.material.appbar.AppBarLayout
            style="@style/Widget.Bchat.AppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@animator/appbar_elevation">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"/>

        <com.thoughtcrimes.securesms.components.ControllableTabLayout
                android:id="@+id/tab_layout"
                style="@style/Widget.Bchat.TabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.thoughtcrimes.securesms.components.ControllableViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:background="@color/page_background"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

