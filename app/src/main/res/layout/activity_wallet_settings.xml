<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_node_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/wallet_card_transaction_card_background"
    tools:context="com.thoughtcrimes.securesms.wallet.settings.WalletSettings">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/wallet_card_transaction_card_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_nodes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_color"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/currentNodeCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wallet_card_color"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">
            <LinearLayout
                android:id="@+id/currentNodeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/currentNodeLayoutSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/currentNodeTextView"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/current_node"
                        tools:ignore="NestedWeights" />
                    <TextView
                        android:id="@+id/currentNodeTextViewValue"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:text="publicnode1.rpcnode.stream"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/currentNodeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_forward"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallets"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_color"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wallet_card_color"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/displayBalanceAsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/displayBalanceAsTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_height="match_parent"
                        android:text="@string/display_balance_as"/>
                    <TextView
                        android:id="@+id/displayBalanceAsDescription"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/decimalsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/decimalsTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_height="match_parent"
                        android:text="@string/decimals"/>
                    <TextView
                        android:id="@+id/decimalsDescription"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/enableFiatCurrencyConversionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:visibility="gone"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/enableFiatCurrencyConversionTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_height="match_parent"
                        android:text="@string/enable_fiat_currency_conversion"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/enableFiatCurrencyConversionSwitchCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/currencyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/currencyTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_height="match_parent"
                        android:text="@string/currency"/>
                    <TextView
                        android:id="@+id/currencyDescription"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/feePriorityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/feePriorityTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_height="match_parent"
                        android:text="@string/fee_priority"/>
                    <TextView
                        android:id="@+id/feePriorityDescription"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/saveRecipientAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/saveRecipeintAddressTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center|start"
                        android:layout_height="match_parent"
                        android:text="@string/save_recipient_address"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/saveRecipientAddressSwitchCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green_color"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/wallet_card_color"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/addressBookLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_address_book_page_title"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_forward"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/changePinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/change_pin"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_forward"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
</FrameLayout>