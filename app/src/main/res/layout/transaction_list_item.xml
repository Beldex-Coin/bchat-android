<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/wallet_transaction_list_item_card_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/transaction_status_icon"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_wallet_receive_button"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/transaction_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/transaction_date_and_time_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="12sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/transaction_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/text"
                    android:gravity="center|end"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/transaction_id_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID :"
                    android:textStyle="bold"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/button_green"/>
                <TextView
                    android:id="@+id/transaction_date_and_time_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date &amp; Time :"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/transaction_date_and_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/grey"/>
                <TextView
                    android:id="@+id/transaction_height_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height :"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/transaction_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/grey"/>
                <TextView
                    android:id="@+id/transaction_fee_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction Fee :"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/transaction_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/grey"/>
                <TextView
                    android:id="@+id/transaction_recipient_address_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipient Address :"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/transaction_recipient_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/grey"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>