<?xml version="1.0" encoding="utf-8"?>
<com.thoughtcrimes.securesms.conversation.v2.messages.DocumentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/medium_spacing">

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/documentViewIconImageView"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_document_large_light"
            app:tint="@color/text" />

        <TextView
            android:fontFamily="@font/open_sans_regular"
            android:id="@+id/documentViewIconTextView"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:text="TXT"
            android:gravity="center"
            android:textSize="6sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/document_text"/>
        <ProgressBar android:id="@+id/gif_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/accent"
            android:indeterminateTintMode="src_in"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_gravity="center"
            android:gravity="center"/>
    </RelativeLayout>

    <TextView
        android:fontFamily="@font/open_sans_regular"
        android:id="@+id/documentTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="@dimen/small_font_size"
        tools:text="I'm a very long document title. Did you know that?" />

</com.thoughtcrimes.securesms.conversation.v2.messages.DocumentView>