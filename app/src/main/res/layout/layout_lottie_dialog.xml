<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lottie_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/lottie_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:visibility="gone"
        tools:text="Title" />

    <LinearLayout
        android:id="@+id/lottie_dialog_animation_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/lottie_dialog_title"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_dialog_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/lottie_dialog_exit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_close_white_18dp"
        android:visibility="visible"
        tools:text="Title" />

    <TextView
        android:id="@+id/lottie_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_dialog_animation_container"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:lineHeight="22dp"
        android:justificationMode="inter_word"
        android:text="Yay! You made it here. Claim your airdrop. Submit your BChat ID and BDX wallet address in the link below"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="Yay! You made it here. Claim your airdrop. Submit your BChat ID and BDX wallet address in the link below" />

    <LinearLayout
        android:id="@+id/lottie_dialog_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_dialog_message"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="horizontal" />
</RelativeLayout>