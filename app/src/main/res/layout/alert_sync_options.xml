<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_dialog_background_inset"
    android:elevation="4dp"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/sync_option"
            android:textAlignment="center"
            android:textSize="@dimen/medium_font_size"
            android:textStyle="bold"
            android:textColor="@color/button_green"/>

        <Button
            android:id="@+id/reConnectButton_Alert"
            style="@style/Widget.Bchat.Button.Common.Sync"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/sync_reconnect"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rescanButton_Alert"
            style="@style/Widget.Bchat.Button.Common.Sync"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/sync_rescan"
            android:textColor="@color/text"
            android:textSize="16sp" />


</LinearLayout>